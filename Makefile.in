CXX = g++

STD =c++11 -pedantic

LOOPLIMIT=64

TAPESIZE=\(1*512\)

CELL_T=char

COL=32


INCLUDE = ../include

FLAGS = -DLOOPLIMIT=$(LOOPLIMIT) -DTAPESIZE=$(TAPESIZE) -DCELL_T=$(CELL_T) -DCOL=$(COL) -DEOF_UNCHANGED

DEBUG = -g -Wall -std=$(STD)

RELEASE = -O3 -Wall -std=$(STD)

CXXFLAGS = $(RELEASE) $(FLAGS) -I$(INCLUDE)

